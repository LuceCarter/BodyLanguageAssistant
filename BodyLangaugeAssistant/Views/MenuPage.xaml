<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             ios:Page.UseSafeArea="True"
             x:Class="BodyLangaugeAssistant.Views.MenuPage">
    <StackLayout>
        <Frame BackgroundColor="{StaticResource PrimaryColorOrange}"
               CornerRadius="0"
               HasShadow="False"
               Padding="24">
            <Label FontFamily="WorkSans"
                   FontSize="18"
                   HorizontalTextAlignment="Center"
                   Text="Body Language Assistant!"
                   TextColor="Black"/>
        </Frame>
        <StackLayout Padding="50,0,50,50"
                     VerticalOptions="CenterAndExpand">
            <Button Style="{StaticResource ButtonStyle}"
                    Text="Anaylse Sentiment"
                    Command="{Binding AnalyseTextCommand}"/>
            <Button Style="{StaticResource ButtonStyle}"
                    Text="Analyse Body Language"
                    Command="{Binding AnalyseBodyLanguageCommand}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>